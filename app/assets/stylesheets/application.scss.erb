.menu-icon {
  height: 5vh;
  width: 5vh;
  cursor: pointer;
}
.menu-icon.active .hamburger {
  background-color: transparent;
}
.menu-icon.active .hamburger:before {
  transform: rotate(-45deg);
  top: 0;
}
.menu-icon.active .hamburger:after {
  transform: rotate(225deg);
  width: 5vh;
  top: 0;
}
.hamburger {
  position: relative;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  height: 2px;
  width: 3.5vh;
  border-radius: 5px;
  background-color: #cacaca;
  transition: .3s;
  cursor: pointer;
}
.hamburger:before,
.hamburger:after {
  content: "";
  position: absolute;
  
  border-radius: 5px;
  background-color: #cacaca;
  transition: .3s;    
}
.hamburger:before {
  top: -1.2vh;
  right: 0;
  height: 2px;
  width: 5vh;
}
.hamburger:after {
  top: 1.2vh;
  right: 0;
  height: 2px;
  width: 2vh;
}
