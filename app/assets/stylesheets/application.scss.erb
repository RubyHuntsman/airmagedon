@import "bootstrap";

.image {
	background: url(<%= asset_path('image') %>) no-repeat center center fixed;
	background-size: cover;
}
.title {
	margin-top: 45vh;
	color: #fff;
}
.main {
	height: 100vh;
	width: 100vw;
	background-color: #f7f7f7;
}
.navbar-default{
	height: 6vh;
  transition: 0.5s ease;
  background: transparent;
  /*border-bottom: 0.5px solid #f7f7f7; <-- kolor do tekstu itd */
  /*border-bottom: 0.5px solid #181915;*/
  border-bottom: 0.5px solid #f7f7f7;
}
.navbar-default.scrolled {
  height: 10vh;	
  background-color: #212529;
  opacity: 0.7;
}
.color {
	color: #f7f7f7;
}
.content {
	padding-top: 15vh;
	height: 100vh;
	width: 100vw;
	background-color: #f7f7f7;
}
.bg {
	padding-top: 12vh;
	background-color: #fff;
	height: 50vh;
}
.tab {
	background-color: #f7f7f7;
	padding: 15vh 0;
}
.bg2 {
	padding-top: 15vh;
	height: 100vh;
	width: 100vw;
	background-color: #fff;
}
.color:hover {
	color: red;
	transition: 0.4s;
}
footer {
	height: 5vh;
	width: 100vw;
	line-height: 5vh;
	background-color: #212529;
	color: #f7f7f7;
	text-align: center;
	font-size: 12px;
	opacity: 0.8;
}