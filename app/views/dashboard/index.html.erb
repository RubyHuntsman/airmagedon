<h1>Pomiary na Å¼ywo</h1>

  <table>
    <tr>
      <th>Lokalizacja</th>
      <th>PM10</th>
      <th>PM2.5</th>
      <th>Godzina pomiaru</th>
      <th>Interpretacja*</th>
    </tr>
  <% @live.each do |m| %>
      <tr>
        <td><%= m.installation.name %></td>
        <td><%= (m.pm10*100)/50 %>%</td>
        <td><%= (m.pm25*100)/25 %>%</td>
        <td><%= m.measured_at.in_time_zone("Warsaw").strftime("%H:%M") %></td>
        <%= getColor(m.pm10, m.pm25) %>
      </tr>

  <% end %>

<div style="width: 800px;">
<canvas id="area" width="400" height="200"></canvas>
</div>
<script>
	area('area', 
		<%= @area10.keys.map{ |v| v } %>,
		<%= @area10.values.map { |v| v.round } %>,
		<%= @area25.values.map { |v| v.round } %>
		);
</script>