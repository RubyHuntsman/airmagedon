<section class="container-fluid bg2">
  <div class="row justify-content-center">
    <div class="col-9">
      <h4>Pył zawieszony PM10 - średnie godzinowe w ostatnich 24h</h4>
      <!-- <canvas id="area2"></canvas> -->
    </div>
  </div>
</section>
  
<script>
  area('area', 
    <%= @area10.keys.map{ |v| v } %>,
    <%= @area10.values.map { |v| v.round } %>,
    <%= @area25.values.map { |v| v.round } %>
    );
</script>