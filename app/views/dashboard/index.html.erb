<section class="container-fluid image main">
  <div class="row">
    <div class="col-12 text-center title">
      <h1>Alarm Smogowy - Airmagedon</h1>
    </div>    
  </div>
</section>
<section class="container-fluid content">
  <div class="row justify-content-center">
    <div class="col-9">
      <h4>Pył zawieszony PM10 i PM2.5 w Jaworznie w ostatnich 24h (uśrednienie z <%= @installations_count %> stacji)</h4>
      <canvas id="area"></canvas>
    </div>
  </div>
</section>
<section class="container-fluid bg">
  <div class="row justify-content-center">
    <div class="col-9">
      <h4>Średnie z ostatniej doby dla Jaworzna (uśrednienie z <%= @installations_count %> stacji)</h4>
      <br>
      <div class="row justify-content-center">
        <div class="col-5">
          <table class="table table-striped table-dark shadow-lg">
            <tr>
              <th scope="row">PM10</th>
              <td>107% normy WHO (54 µg/m3)</td>
            </tr>
            <tr>
              <th scope="row">PM2.5</th>
              <td>146% normy WHO (36 µg/m3)</td>
            </tr>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="container-fluid tab">
  <div class="row justify-content-center">
    <div class="col-9">
      <h4>Pomiary na żywo</h4>
      <br>
      <table class="table table-striped table-dark shadow-lg">
        <thead>
          <tr>
            <th scope="col">Lokalizacja</th>
            <th scope="col">PM10</th>
            <th scope="col">PM2.5</th>
            <th scope="col">Godzina pomiaru</th>
            <th scope="col">Interpretacja</th>
          </tr>
        </thead>
        <tbody>
          <% @live.each do |m| %>
            <tr>
              <th scope="row"><%= m.installation.name %></th>
              <td><%= (m.pm10*100)/50 %>%</td>
              <td><%= (m.pm25*100)/25 %>%</td>
              <td><%= m.measured_at.in_time_zone("Warsaw").strftime("%H:%M") %></td>
              <%= getColor(m.pm10, m.pm25) %>
            </tr>
          <% end %>
