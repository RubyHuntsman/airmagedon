<section class="container-fluid static-mobile d-block d-md-none">
  <div class="row justify-content-center">
    <div class="col-10">
      <h2 class="text-center">Zaloguj się</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :login %><br />
          <%= f.text_field :login, autofocus: true, class: 'form-control' %>
        </div>
        <div class="field">
          <%= f.label :password, "Hasło" %><br />
          <%= f.password_field :password, autocomplete: "Obecne hasło", class: 'form-control' %>
        </div>
        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "Zapamiętaj mnie" %>
          </div>
        <% end -%>
        <div class="actions">
          <%= f.submit "Zaloguj", class: 'btn btn-outline-secondary' %>
        </div>
      <% end %>
      <br>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>
