<section class="container-fluid static-mobile d-block d-md-none">
  <div class="row justify-content-center row-color">
    <div class="col-10">
      <h2 class="text-center">Edytuj konto</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :login %><br />
          <%= f.text_field :login, autofocus: true, class: 'form-control' %>
        </div>

         <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :current_password, "Obecne hasło"%> <i>(Jest potrzebne do potwierdzenia zmian)</i><br />
          <%= f.password_field :current_password, autocomplete: "Obecne hasło", class: 'form-control' %>
        </div>
  
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="field">
            <div>Obecnie czeka potwierdzenie: <%= resource.unconfirmed_email %></div>
          </div>
        <% end %>

        <div class="field">
          <%= f.label :password, "Nowe hasło"%>
          <% if @minimum_password_length %>
            <em>(Minimum <%= @minimum_password_length %> znaków)</em>
          <% end %>
          <br />
          <%= f.password_field :password, autocomplete: "Nowe hasło", class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "Potwierdź hasło" %><br />
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>


        <div class="actions">
          <br>
          <%= f.submit "Akceptuj!", class: 'btn btn-outline-secondary' %>
        </div>
      <% end %>
      <div class="field">
        <br>
        <%= button_to "Usuń konto!", registration_path(resource_name), data: { confirm: "Czy jesteś pewny że chcesz to zrobić?" }, method: :delete, class: 'btn btn-outline-secondary' %>
      </div>
      <br>
      <%= link_to "Wróć", :back%>
      
    </div>
  </div>
</section>

