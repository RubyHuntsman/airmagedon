<section class="container-fluid static d-none d-lg-block">
	<div class="row justify-content-center">
		<div class="col-3.5">
			<h2 class="text-center">Wybrane lokalizacje</h2>
			<%= form_for @user, url: {action: "update"} do |f| %>
			
				<div class="actions text-center">
					<div class="meas-alert">POWIADOMIENIA</div>
					OFF
					<label class="switch">
						<%= f.check_box :isactive, class: 'checkbox' %>
						<span class="slider round"></span>
					</label>
					ON
				</div>
				<table class="table table-borderless">
					<thead>
						<tr>
							<th class="text-center">
								OFF/ON
							</th>
							<th>
								Miejsce
							</th>
						</tr>
					</thead>
					<tbody>
					<% @installations.each do |i| %>
						<tr>
							<th scope="row" class="text-center">
								<%= check_box_tag 'user[installation_ids][]', i.id, @user.installations.include?(i), class: 'checkbox' %>
							</th>
							<td>
								<%= i.name %>
							</td>
						</tr>
					<% end %>	
						<tr>
							<td >
							<div>Próg informowania</div>								
							<%= f.select :critical, options_for_select([['Bardzo źle', 1],['Źle', 2],['Dostatecznie',3],['Umiarkowanie',4],['Dobrze',5],['Bardzo dobrze',6]], @user.critical), {}, {class: 'custom-select'} %>	
							</td>
							<td>
								<div>&nbsp;</div>
								<%= f.submit "Zmień", class: 'btn btn-outline-dark' %>
							</td>
						</tr>
					</tbody>
				</table>






			<% end %>
		</div>
	</div>
</section>