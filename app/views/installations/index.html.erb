<h1>Installations</h1>

<table>
  <thead>
    <tr>
      <th>Nazwa</th>
      <th>Czujnik</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @installations.each do |installation| %>
      <tr>
        <td><%= installation.name %></td>
        <td><%= installation.sensor_id %></td>
        <td><%= link_to 'Pokaż', installation %></td>
        <td><%= link_to 'Edytuj', edit_installation_path(installation) %></td>
        <td><%= link_to 'Usuń', installation, method: :delete, data: { confirm: 'Czy jesteś pewny?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

