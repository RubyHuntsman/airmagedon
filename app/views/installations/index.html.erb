<%= form_with url: '/smtp_options' do |f| %>
<%= f.text_field :smtp_login, value: Setting.smtp_login %><br>
<%= f.password_field :smtp_password, value: Setting.smtp_password %><br>
<%= f.text_field :smtp_host, value: Setting.smtp_host %><br>
<%= f.check_box :notif_on, { checked: true ? Setting.notif_on == "1" : false } %>
<%= f.submit "Zatwierdź2" %>
<% end %>


<h1>Apikey</h1>
<p>Podaj klucz(e) Airly</p>

<%= form_tag action: 'api_key' do |form| %>
  <%= text_field_tag :api_key, Setting.api_key %><br>
  <%= text_field_tag :api_key2, Setting.api_key2 %><br>
  <%= text_field_tag :api_key3, Setting.api_key3 %><br>
  <%= submit_tag "Zatwierdź" %>
<% end %>
