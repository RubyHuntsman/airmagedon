<section class="container-fluid static-install d-block d-md-none">
	<div class="row justify-content-center">
		<div class="col-12">
			<h1 class="text-center">Instalacje</h1>
			<table class="table">
				<thead>
					<tr>
						<th>Nazwa</th>
						<th>Czujnik</th>
					</tr>
				</thead>
				<tbody>
					<% @installations.each do |installation| %>
						<tr>
							<td><%= installation.name %></td>
							<td><%= installation.sensor_id %></td>
						</tr>
						<tr>
							<td><%= link_to 'Edytuj', edit_installation_path(installation), class: 'btn btn-outline-dark' %></td>
							<td><%= link_to 'Usuń', installation, method: :delete, data: { confirm: 'Jesteś pewny?' }, class: 'btn btn-outline-danger' %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
			<%= link_to 'Dodaj nową instalację', new_installation_path %>
			<br>
			<br>
			<br>
			<h1>E-mail</h1>
			<h5>Podaj dane adresu email z którego będą wysyłane powiadomienia</h5>
			<%= form_with url: '/smtp_options' do |f| %>
				<%= f.label "Email" %>
				<%= f.text_field :smtp_login, value: Setting.smtp_login, class: 'form-control' %>
				<%= f.label "Hasło" %>
				<%= f.password_field :smtp_password, value: Setting.smtp_password, class: 'form-control' %>
				<%= f.label "Serwer poczty" %>
				<%= f.text_field :smtp_host, value: Setting.smtp_host, class: 'form-control' %>
				<%= f.label "Włącz wysyłanie powiadomień" %>
				<%= f.check_box :notif_on, { checked: true ? Setting.notif_on == "1" : false } %>
				<%= f.submit "Zatwierdź", class: 'btn btn-outline-dark' %>
			<% end %>
			<br>
			<br>
			<br>
			<h1>Apikey</h1>
			<h5>Podaj klucz(e) Airly</h5>
			<%= form_tag action: 'api_key' do |form| %>
				<%= label_tag "Klucz API 1" %>
				<%= text_field_tag :api_key, Setting.api_key, class: 'form-control' %>
				<%= label_tag "Klucz API 2" %>
				<%= text_field_tag :api_key2, Setting.api_key2, class: 'form-control' %>
				<%= label_tag "Klucz API 3" %>
				<%= text_field_tag :api_key3, Setting.api_key3, class: 'form-control' %><br>
				<%= submit_tag "Zatwierdź", class: 'btn btn-outline-dark' %>
			<% end %>
		</div>  
	</div>
</section>

