<%= form_with(model: installation, local: true) do |form| %>
  <% if installation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(installation.errors.count, "error") %> Zostało zabronione zapisanie tej instalacji:</h2>

      <ul>
      <% installation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= form.label :name, "Nazwa" %><br>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class="field">
    <%= form.label :sensor_id, "ID sensora" %><br>
    <%= form.number_field :sensor_id, class: 'form-control' %>
  </div>
  <div class="actions">
    <br>
    <%= form.submit "Zatwierdź", class: 'btn btn-outline-dark' %>
  </div>
<% end %>
