<%= form_with(model: installation, local: true) do |form| %>
  <% if installation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(installation.errors.count, "error") %> Zosta≈Ço zabronione zapisanie tej instalacji:</h2>

      <ul>
      <% installation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "Nazwa" %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :sensor_id, "ID sensora" %>
    <%= form.number_field :sensor_id %>
  </div>

  <div class="actions">
    <%= form.submit "Dodaj instalacje" %>
  </div>
<% end %>
